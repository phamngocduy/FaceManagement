<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>FaceID App</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" onclick="takePhoto(event)" href="@Url.Action("Index", "Home")">Take photo</a>
                <script>
                    function takePhoto(event) {
                        $('#Upload').each(function () {
                            event.preventDefault();
                            $(this).click();
                        });
                    }
                </script>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("My Classes", User.Identity.Name.ToLower().EndsWith("@vanlanguni.vn") ? "Browser" : "Contact", "Home")</li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            Models
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li class="active"><a id="Model" href="#" data-val="TINYFACEDETECTOR">TinyFaceDetector</a></li>
                            <li><a id="Model" href="#" data-val="MTCNN">Mtcnn</a></li>
                            <li class="disabled"><a id="Model" href="#" data-val="SSDMOBILENETV1">SsdMobilenetv1</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            Rotation
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a id="Rotate" href="#" data-val="-90">Rotate 90</a></li>
                            <li><a id="Rotate" href="#" data-val="0">Rotate 0</a></li>
                            <li><a id="Rotate" href="#" data-val="90">Rotate -90</a></li>
                            <li><a id="Rotate" href="#" data-val="180">Rotate -180</a></li>
                        </ul>
                    </li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content" style="text-align:center">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/angular.js"></script>
    <script src="~/Scripts/angular-route.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
